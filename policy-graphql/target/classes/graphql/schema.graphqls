type Query {
  policies: [Policy!]!
  policy(policyNumber: String!): Policy!
  covers(policyNumber: String!, claimType: String!, claimedAmount: Float!): CoverageResult!
}

type Policy {
  policyNumber: String!
  valid: Boolean!
  holderName: String
  coverageLimit: Float!
  coveredClaimTypes: [String!]!
  notes: String
}

type CoverageResult {
  covered: Boolean!
  reason: String!
  maxPayable: Float!
}
